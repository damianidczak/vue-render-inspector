{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": true,
    "types": ["vue"]
  },
  "include": ["index.d.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
